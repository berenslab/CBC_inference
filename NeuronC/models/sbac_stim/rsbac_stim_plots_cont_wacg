#! /usr/bin/perl
#
#
#  run variable contrast with/without inhibition
#
# @inhvals = (0, 1);
@inhvals = (0);
$inhnum = $#inhvals + 1;
# $ristart = 200;
# $ristop  = 800;
# $ristep  = 100;

# @sbspacvals = (115,135,155);
# @sbspacvals = (135,155);
@sbspacvals = (135,145,155);
$sbspacnum = $#sbspacvals + 1;

# @sbcondvals = (1,1,1);  # weights for sbac inhibition according to num of synapses
# 167,171,113
@sbcondvals = (1,1,1);  # weights for sbac inhibition according to num of synapses
$sbcondnum = $#sbcondvals + 1;

# @barvals = (70,150,300);  # bar length
@barvals = (70,300);  # bar length
$barnum = $#barvals + 1;

@contvals = (0.0030, 0.0035, 0.0040, 0.0045, 0.0050, 0.0055, 0.0060, 0.0065, 0.0070, 0.0075, 0.0080, 0.0085, 0.0090, 0.0095, 0.0100);
$contnum = $#contvals + 1;
# $nastart = 600;
# $nastop  = 2000;
# $nastep  = 100;

$relangle = 360;
# $sdia = 0.22;
$sdia = 0.3;
$spdia = 0;
$noinh = 0;
$sbarr = 107;
$sbspac = 155;
$barlength = 70;
$cadist = 2.2e-3;
$velocity = 2000;
$stimtype = 1;
# $wac_g = 8e-10;
$wac_g = 0;

# $synanpo = 110;
$synanpo = 90;


# $dbp1_cond = 5e-10;
# $dbp1_cond = 3e-10;
$dbp1_cond = 2.3e-10;
# $sb_inhib  = $sbac_inhib= 100e-12;
$sb_inhib = $sbac_inhib = 80e-12;

# $mosrun = "mosrun -l -b -g";
$mosrun = "";

use Getopt::Long;

&GetOptions ("relangle=f" => \$relangle,
             "sdia=f"      => \$sdia,
             "spdia=f"     => \$spdia,
             "noinh=i"     => \$noinh,
             "sbarr=i"     => \$sbarr,
             "sbspac=f"    => \$sbspac,
             "barlength=f" => \$barlength,
	     "cadist=f"    => \$cadist,
	     "synanpo=f"   => \$synanpo,
	     "dbp1_cond=f" => \$dbp1_cond,
	     "sb_inhib=f"  => \$sb_inhib,
	     "wac_g=f"     => \$wac_g
	    );

# $synanpov = $synanpo;
$synanpov = sprintf("%.3d",$synanpo);
$vel = $velocity;
$sd = sprintf("%4.2f",$sdia);
if ($spdia==0) {$spdia = $sdia;}
$wacg = sprintf("%3.1f",$wac_g*1e10);

for ($i=0; $i<$inhnum; $i++) {
   $noinh = $inhvals[$i];
   for ($s=0; $s<$sbspacnum; $s++) {
      $sbspac = sprintf("%.3d",$sbspacvals[$s]);
      $sb_inhib = $sbcondvals[$s] * $sbac_inhib;
      for ($b=0; $b<$barnum; $b++) {
         $barlength = sprintf("%.3d",$barvals[$b]);
         for ($c=0; $c<$contnum; $c++) {
             $cont = sprintf("%6.4f",$contvals[$c]);
             system ("echo relangle $relangle contrast $cont inh $noinh sbspac $sbspac barlength $barlength synanpo $synanpov sdia $sd wac_g $wacg");
             system ("mosrun retsim --runbar 1 --expt sbac_stim --sbac_file morph_sbac_168c --sbac_densfile dens_sbacc.n --sbac_densfile2 dens_sbacd.n --sb_rm 1e4 --sbarr $sbarr --sbspac $sbspac --sb_vs -0.049 --sb_vr -0.060 --radincr 20 --soma_z -50 --sbac_thetax 4 --sbac_thetay 4 --predur 0.15 --vhold -0.06 --minten -0.038 --scontrast $cont --outward 0 --iscal 2e-9 --dri 100 --ninfo 2 --set_vclamp 0 --sdia $sd --spdia $spdia --dSomaDia 10 --sbac_dend1 1 --sbac_dend_cplam 0.1 --stimtype $stimtype --barwidth 30 --barlength $barlength --velocity $vel --stimdur 0.5 --nadist 0e-3 --namid 0e-3 --kdist 2e-3 --kmid 2e-3 --kprox 2e-3 --ksoma 3e-3 --cadist $cadist --camid 0e-3 --plotlabel sb7_midbp.$relangle.$cont.$noinh.$sbspac.$barlength.$synanpov.$sd.$wacg -r 12346 --n_hpb1 0 --dbp1_cond $dbp1_cond --dbp1_nscale -2.1 --sbac_nscale -3.05 --sbaclm 0.1 --no_excit 1 --set_inhib $sb_inhib --no_inhib $noinh --wac_g $wac_g --sbac_isynanpo 60 --sbac_isynrngi -1$relangle --sbac_isynanni 80 --dbp1_anpi 20 --dbp1_anpo $synanpov --sbac_ithr -0.051 --stim_theta 0 --mxrot 0 --make_movie 0 --space_time 1 --frame_int 0.0002 --Vmin -0.06 --Vmax -0.045 >& sbac7_midbp_ca.$relangle.$cont.$noinh.$sbspac.$barlength.$synanpov.$sd.$wacg.r &");
   	 sleep(2);
         }
   #      sleep(10);
      }
   }
}


