#! /usr/bin/perl
#
#
#  run variable contrast with/without inhibition
#
@inhvals = (0, 1);
$inhnum = $#inhvals + 1;
# $ristart = 200;
# $ristop  = 800;
# $ristep  = 100;

$noinh = 0;

@anglvals = (300, 360);
$anglnum = $#anglvals + 1;

@contvals = (0.001, 0.0015, 0.002, 0.0025, 0.003, 0.0035, 0.004, 0.0045, 0.005, 0.0055, 0.006, 0.0065, 0.007, 0.0075, 0.008, 0.0085, 0.009, 0.0095, 0.01);
$contnum = $#contvals + 1;
# $nastart = 600;
# $nastop  = 2000;
# $nastep  = 100;

# $mosrun = "mosrun -l";
$mosrun = "";

use Getopt::Long;

&GetOptions ("relangle=f" => \$relangle,
             "sdia=f"      => \$sdia,
             "noinh=i"     => \$noinh,
             "sbarr=i"     => \$sbarr,
             "sbspac=f"    => \$sbspac,
             "barlength=f" => \$barlength,
             "cadist=f"    => \$cadist,
             "synanpo=f"   => \$synanpo,
             "dbp1_cond=f" => \$dbp1_cond,
             "sb_inhib=f"  => \$sb_inhib
            );


for ($a=0; $a<$anglnum; $a++) {
     $angl = $anglvals[$a];
     for ($c=0; $c<$contnum; $c++) {
         $cont = $contvals[$c];
         system ("echo contrast $cont angl $angl");
         system ("$mosrun retsim --expt sbac_stim --sbac_file morph_sbac_168b --sbac_densfile dens_sbacc.n --sbac_densfile2 dens_sbacd.n --sb_rm 1e4 --sbarr 107 --sbspac 120 --sb_vs -0.049 --sb_vr -0.060 --radincr 20 --soma_z -50 --sbac_thetax 4 --sbac_thetay 4 --predur 0.15 --vhold -0.06 --minten -0.038 --scontrast $cont --outward 0 --iscal 2e-9 --dri 100 --ninfo 2 --set_vclamp 0 --sdia 0.5 --dSomaDia 10 --sbac_dend1 1 --sbac_dend_cplam 0.1 --stimtype 1 --barwidth 30 --barlength 500 --velocity 2000 --stimdur 0.5 --nadist 0e-3 --namid 0e-3 --kdist 2e-3 --kmid 2e-3 --kprox 2e-3 --ksoma 3e-3 --cadist 2.5e-3 --camid 0e-3 --plotlabel sb7_midbp_135.$angl.$cont.$noinh -r 12345 --n_hpb1 0 --dbp1_cond 15e-10 --dbp1_nscale -2.1 --sbac_nscale -3.05 --sbaclm 0.1 --no_excit 1 --set_inhib 100e-12 --no_inhib $noinh --sbac_isynanpo 30 --sbac_isynrngi -1$angl --sbac_isynanni 55 --dbp1_anpi 15 --dbp1_anpo 60 --sbac_ithr -0.051 --stim_theta 0 --mxrot 0 --make_movie 0 --space_time 1 --frame_int 0.0002 --Vmin -0.06 --Vmax -0.045 >& sbac7_midbp_ca_135.a$angl.$cont.$noinh.r &");
     }
}


