hzpx 1 21 1830 1 0  85 hz285s.ai.r     >hz285s.ai.p
hzpx 1 21 1830 1 0  80 hz285s.aj.r     >hz285s.aj.p
hzpx 1 21 1830 1 0  75 hz285s.ak.r     >hz285s.ak.p
hzpx 1 21 1830 1 0  70 hz285s.al.r     >hz285s.al.p
