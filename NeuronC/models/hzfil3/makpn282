#! /bin/csh -f
#
#  conversion from temporal to spatial plots
#
#  parameters:
#  hzpn start stop center scale offset file
#
# hz282: 60 x 60 array of cones
#
#hzpn 1 21 1830 1 0 hz282aa.r     >hz282aa.pn
#hzpn 1 21 1830 1 0 hz282ab.r     >hz282ab.pn
#hzpn 1 21 1830 1 0 hz282ac.r     >hz282ac.pn
#hzpn 1 21 1830 1 0 hz282ad.r     >hz282ad.pn
#
hzp 1 21 1830 1 0 hz282ab.r     >hz282ab.p
hzp 1 21 1830 1 0 hz282ac.r     >hz282ac.p
hzp 1 21 1830 1 0 hz282ad.r     >hz282ad.p
hzp 1 21 1830 1 0 hz282ae.r     >hz282ae.p
#
#  The type B horizontal cells:
#
hzp 29 35 15084 4 -0.33 hz282ab.r     >hz282ab.pb
hzp 29 35 15084 4 -0.33 hz282ac.r     >hz282ac.pb
hzp 29 35 15084 4 -0.33 hz282ad.r     >hz282ad.pb
hzp 29 35 15084 4 -0.33 hz282ae.r     >hz282ae.pb
#
#hzpn 1 21 1830 1 0 hz282ba.r     >hz282ba.pn
#hzpn 1 21 1830 1 0 hz282bb.r     >hz282bb.pn
#hzpn 1 21 1830 1 0 hz282bc.r     >hz282bc.pn
#
#hzp 1 21 1830 1 0 hz282ba.r     >hz282ba.p
#hzp 1 21 1830 1 0 hz282bb.r     >hz282bb.p
#hzp 1 21 1830 1 0 hz282bc.r     >hz282bc.p
