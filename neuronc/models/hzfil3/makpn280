#! /bin/csh -f
#
#  conversion from temporal to spatial plots
#
#  parameters:
#  hzpn start stop center scale offset file
#
# hz280: 60 x 60 array of cones
#
hzpn 1 21 1830 1 0 hz280aa.r     >hz280aa.pn
hzpn 1 21 1830 1 0 hz280ab.r     >hz280ab.pn
hzpn 1 21 1830 1 0 hz280ac.r     >hz280ac.pn
hzpn 1 21 1830 1 0 hz280ad.r     >hz280ad.pn
#
hzp 1 21 1830 1 0 hz280aa.r     >hz280aa.p
hzp 1 21 1830 1 0 hz280ab.r     >hz280ab.p
hzp 1 21 1830 1 0 hz280ac.r     >hz280ac.p
hzp 1 21 1830 1 0 hz280ad.r     >hz280ad.p
#
hzpn 1 21 1830 1 0 hz280ba.r     >hz280ba.pn
hzpn 1 21 1830 1 0 hz280bb.r     >hz280bb.pn
hzpn 1 21 1830 1 0 hz280bc.r     >hz280bc.pn
hzpn 1 21 1830 1 0 hz280bd.r     >hz280bd.pn
#
hzp 1 21 1830 1 0 hz280ba.r     >hz280ba.p
hzp 1 21 1830 1 0 hz280bb.r     >hz280bb.p
hzp 1 21 1830 1 0 hz280bc.r     >hz280bc.p
hzp 1 21 1830 1 0 hz280bd.r     >hz280bd.p
#
hzpn 1 21 1830 1 0 hz280ca.r     >hz280ca.pn
hzpn 1 21 1830 1 0 hz280cb.r     >hz280cb.pn
hzpn 1 21 1830 1 0 hz280cc.r     >hz280cc.pn
hzpn 1 21 1830 1 0 hz280cd.r     >hz280cd.pn
hzpn 1 21 1830 1 0 hz280ce.r     >hz280ce.pn
#
hzp 1 21 1830 1 0 hz280ca.r     >hz280ca.p
hzp 1 21 1830 1 0 hz280cb.r     >hz280cb.p
hzp 1 21 1830 1 0 hz280cc.r     >hz280cc.p
hzp 1 21 1830 1 0 hz280cd.r     >hz280cd.p
hzp 1 21 1830 1 0 hz280ce.r     >hz280ce.p
#
hzpn 1 21 1830 1 0 hz280da.r     >hz280da.pn
hzpn 1 21 1830 1 0 hz280db.r     >hz280db.pn
hzpn 1 21 1830 1 0 hz280dc.r     >hz280dc.pn
hzpn 1 21 1830 1 0 hz280dd.r     >hz280dd.pn
hzpn 1 21 1830 1 0 hz280de.r     >hz280de.pn
#
hzp 1 21 1830 1 0 hz280da.r     >hz280da.p
hzp 1 21 1830 1 0 hz280db.r     >hz280db.p
hzp 1 21 1830 1 0 hz280dc.r     >hz280dc.p
hzp 1 21 1830 1 0 hz280dd.r     >hz280dd.p
hzp 1 21 1830 1 0 hz280de.r     >hz280de.p
#
# the type A hz cells:
#
hzpn 22 25 16024 7 -0.3 hz280fa.r     >hz280fa.pna
hzpn 22 25 16024 7 -0.3 hz280fb.r     >hz280fb.pna
hzpn 22 25 16024 7 -0.3 hz280fc.r     >hz280fc.pna
hzpn 22 25 16024 7 -0.3 hz280fd.r     >hz280fd.pna
hzpn 22 25 16024 7 -0.3 hz280fe.r     >hz280fe.pna
hzpn 22 25 16024 7 -0.3 hz280ff.r     >hz280ff.pna
hzpn 22 25 16024 7 -0.3 hz280fg.r     >hz280fg.pna
#
# the type B hz cells:
#
hzpn 29 35 15084 4 -0.33 hz280ea.r     >hz280ea.pnb
hzpn 29 35 15084 4 -0.33 hz280eb.r     >hz280eb.pnb
hzpn 29 35 15084 4 -0.33 hz280ec.r     >hz280ec.pnb
hzpn 29 35 15084 4 -0.33 hz280ed.r     >hz280ed.pnb
hzpn 29 35 15084 4 -0.33 hz280ee.r     >hz280ee.pnb
hzpn 29 35 15084 4 -0.33 hz280ef.r     >hz280ef.pnb
hzpn 29 35 15084 4 -0.33 hz280eg.r     >hz280eg.pnb
#
#
hzp 29 35 15084 4 -0.33 hz280ea.r     >hz280ea.pb
hzp 29 35 15084 4 -0.33 hz280eb.r     >hz280eb.pb
hzp 29 35 15084 4 -0.33 hz280ec.r     >hz280ec.pb
hzp 29 35 15084 4 -0.33 hz280ed.r     >hz280ed.pb
hzp 29 35 15084 4 -0.33 hz280ee.r     >hz280ee.pb
hzp 29 35 15084 4 -0.33 hz280ef.r     >hz280ef.pb
hzp 29 35 15084 4 -0.33 hz280eg.r     >hz280eg.pb
